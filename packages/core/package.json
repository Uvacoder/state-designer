{
  "name": "@state-designer/core",
  "version": "1.6.5",
  "description": "Core package for State Designer, a state management library.",
  "author": "steveruizok",
  "repository": "https://github.com/steveruizok/state-designer",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --tsconfig tsconfig.build.json --verbose --noClean",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "immer": "^8.0.2",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "object.entries": "^1.1.3",
    "object.fromentries": "^2.0.4",
    "tsdx": "^0.14.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/core.esm.js",
  "size-limit": [
    {
      "path": "dist/core.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/core.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@types/lodash": "^4.14.168",
    "@types/object.fromentries": "^2.0.0",
    "husky": "^5.1.3",
    "size-limit": "^4.10.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "gitHead": "4c8cfd56c58c86d75ab4137bef03891fd95978f9"
}
